<html lang="en">
<head>
    <%- include("partials/head") %>
    <title>BLog</title>
</head>
<body>


    <%- include("partials/nav") %>
    <div class="container mt-4 row row-cols-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" width="500px"/>
        <p><%= blog.body %></p>
    </div>
   
     <div class container mt-3>
        <h1>Comments</h1>
